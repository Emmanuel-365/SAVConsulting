# On utilise des blocs <IfModule> pour éviter que le serveur crash si un module est absent

# 1. Gestion des URLs (Le plus important)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Si le fichier demandé n'existe pas, et qu'il n'a pas de slash final, on le rajoute
  # Cela aide Next.js (trailingSlash: true) à trouver le bon dossier
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_URI} !(.*)/$
  RewriteRule ^(.*)$ $1/ [L,R=301]

  # Si on demande un dossier, Apache cherchera automatiquement index.html dedans
  # grâce à DirectoryIndex qui est généralement activé par défaut.
</IfModule>

# 2. Compression (Vitesse) - Uniquement si le module est là
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/javascript application/x-javascript application/xml image/svg+xml
</IfModule>

# 3. Cache (Performance)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# 4. Page d'erreur personnalisée
ErrorDocument 404 /404.html
